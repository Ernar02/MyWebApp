<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/_AdminLayout.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <header class="bg-dark text-white p-3 mb-4">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">Admin Panel</h1>
            <nav>
                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link text-white p-0 border-0">Logout</button>
                </form>
            </nav>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3 mt-5">
        <small>© @DateTime.Now.Year WebApp Admin Panel</small>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
